---
import BasicLayout from "../layout/BasicLayout.astro";
import Card from "../components/Card.astro";

const responseData = await fetch("https://randomuser.me/api/?results=5");
const users = await responseData.json();

// console.log(users);
---

<BasicLayout title="Home">
  <h1 class="bg-red-500 text-3xl">Welcome to Astro!</h1>
  <!-- marquee -->
  <div class="max-w-7xl overflow-hidden">
    <!-- marquee track -->
    <ul class="grid-cols-[] font-test grid">
      {
        users.results.map((user) => (
          // marquee item
          <li>
            <Card
              first={user.name.first}
              last={user.name.last}
              genre={user.gender}
              email={user.email}
              phone={user.phone}
              picture={user.picture.large}
            />
          </li>
        ))
      }
    </ul>
  </div>
</BasicLayout>
